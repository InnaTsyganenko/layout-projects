mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "#",
        text: "Новости"
      },
      {
        href: "#",
        text: "Инвестиции"
      },
      {
        href: "#",
        text: "Бизнесу"
      },
      {
        href: "#",
        text: "Самозанятым"
      },
      {
        href: "#",
        text: "Подкасты"
      },
    ]

  header.main-header(class=headerMods)
    .container
      .main-header__wrapper
        if(currentUrl === "index.html")
          +icon("logotype", 238, 16)
        else
          a.main-header__logo(href="index.html", aria-label="Переход на главную")
            +icon("logotype", 238, 16)
        .main-header__exchange-rates.exchange-rates
        ul.exchange-rates__list
          li.exchange-rates__item
            a.exchange-rates__link(href="#")
              span.exchange-rates__indicator-diff.exchange-rates__indicator-diff--fall
                span.visually-hidden Падение показателя
              span.exchange-rates__name USD
              span.exchange-rates__value &nbsp;70.91&nbsp;&#8381;
          li.exchange-rates__item
            a.exchange-rates__link(href="#")
              span.exchange-rates__indicator-diff.exchange-rates__indicator-diff--grow
                span.visually-hidden Рост показателя
              span.exchange-rates__name EUR
              span.exchange-rates__value &nbsp;81.59&nbsp;&#8381;
        nav.main-header__nav.main-nav
          .main-nav__wrapper
            ul.main-nav__list
              each link in headerLinks
                - const activeState = currentUrl === link.href
                li.main-nav__item
                  if(activeState)
                    span.main-nav__link.main-nav__link--is-active=link.text
                  else
                    a.main-nav__link(href=link.href)=link.text
            .user-menu
              ul.user-menu__list
                li.user-menu__item
                  a(href="#").user-menu__link.user-menu__link--search Поиск
                li.user-menu__item
                  a(href="#").user-menu__link.user-menu__link--mailing-list Рассылка
